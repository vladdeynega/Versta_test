@page
@model Versta_test.Pages.CreateModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Создать новый заказ</title>
</head>
<body>

<h4>Создание заказа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.id" class="control-label">Заказ №@Model.LastId()</label>
            </div>
            <div class="form-group">
                <label class="control-label">Город отправителя</label>
                <input asp-for="Order.townFrom" class="form-control" required />
                <span asp-validation-for="Order.townFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Город получателя </label>
                <input asp-for="Order.townTo" class="form-control" required />
                <span asp-validation-for="Order.townTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Адрес отправителя</label>
                <input asp-for="Order.addrFrom" class="form-control" required />
                <span asp-validation-for="Order.addrFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Адрес получателя </label>
                <input asp-for="Order.addrTo" class="form-control" required />
                <span asp-validation-for="Order.addrTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Вес груза</label>
                <input asp-for="Order.weight" class="form-control" required pattern="[0-9]{,3}" />
                <span asp-validation-for="Order.weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата забора груза</label>
                <input asp-for="Order.date" class="form-control" required />
                <span asp-validation-for="Order.date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку заказов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
